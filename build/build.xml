			</fileset>
		</jar>

		<mkdir dir="${pluginres}/120__JDLangFileEditor/plugins" />
		<jar jarfile="${pluginres}/120__JDLangFileEditor/plugins/JDLangFileEditor.jar" manifest="Manifest.MF">
			<fileset dir="${cls}">
				<include name="jd/plugins/optional/langfileeditor/**" />
			</fileset>
